{
  "manifest_version": 3,
  "version": "0.1.0",
  "author": "TNG Technology Consulting GmbH",
  "name": "LLM Support",
  "description": "A Thunderbird extension enabling LLM support while writing E-Mails",
  "browser_specific_settings": {
    "gecko": {
      "id": "llm-thunderbird@tngtech.com",
      "strict_min_version": "110"
    }
  },
  "permissions": ["compose", "storage"],
  "icons": {
    "64": "icons/icon-64px.png",
    "32": "icons/icon-32px.png",
    "16": "icons/icon-16px.png"
  },
  "background": {
    "scripts": ["dist/background.js"]
  },
  "options_ui": {
    "page": "public/options.html",
    "browser_style": false
  },
  "compose_action": {
    "default_title": "To LLM",
    "default_icon": "icons/icon-64px.png"
  }
}
