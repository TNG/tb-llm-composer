# pnpm configuration for enhanced security

# Strict peer dependencies - fail on unmet peer dependencies
strict-peer-dependencies=true

# Enable lockfile validation to ensure integrity
lockfile=true

# Use shamefully-hoist=false for better isolation (pnpm's default strict mode)
# This prevents dependencies from accessing undeclared dependencies
shamefully-hoist=false

# Auto-install-peers for convenience while maintaining strict resolution
auto-install-peers=true

# Enable audit level for security checks
# audit-level=moderate

# Prefer frozen lockfile in CI environments
# This can be overridden by CI scripts
# frozen-lockfile=false

