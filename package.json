{
  "name": "llm-thunderbird",
  "version": "0.2.0RC1",
  "description": "A Thunderbird extension enabling LLM support while writing E-Mails",
  "main": "background.js",
  "scripts": {
    "start": "webpack --watch",
    "build": "webpack --mode production",
    "zip": "run-script-os",
    "zip:darwin:linux": "cd build && zip -r ../llm-thunderbird.xpi ./*",
    "zip:win32": "cd build && 7z a -tzip ../llm-thunderbird.xpi ./*",
    "ship": "npm run build && npm run zip",
    "format": "prettier --write .",
    "test": "jest",
    "test-coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TNG/thunderbird-llm-composer"
  },
  "keywords": [
    "LLM",
    "Thunderbird",
    "huggingface",
    "llm-ls"
  ],
  "author": "TNG Technology Consulting GmbH",
  "dependencies": {
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "@types/thunderbird-webext-browser": "^109.0.4",
    "copy-webpack-plugin": "^12.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "3.2.5",
    "run-script-os": "^1.1.6",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "clearMocks": true,
    "testRegex": "/__tests__/.*\\.test\\.(tsx?|jsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
